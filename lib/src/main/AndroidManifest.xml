<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  xmlns:tools="http://schemas.android.com/tools"
		  package="com.trueelogistics.checkin">

	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
			android:usesCleartextTraffic="true"
			android:allowBackup="true"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			tools:ignore="AllowBackup,GoogleAppIndexingWarning,MissingApplicationIcon,UnusedAttribute">
		<activity android:name="com.trueelogistics.checkin.activity.GenQrActivity">
		</activity>
		<activity
				android:name="com.trueelogistics.checkin.activity.NearByActivity"
				android:screenOrientation="portrait"/>
		<activity
				android:name="com.trueelogistics.checkin.scanqr.ScanQrActivity"
				android:screenOrientation="portrait"/>
		<activity
				android:name="com.trueelogistics.checkin.activity.ShakeActivity"
				android:screenOrientation="portrait"/>
	</application>

</manifest>